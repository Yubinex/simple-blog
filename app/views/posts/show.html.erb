<div class="container">
  <div class="post">
    <%= render @post %>
    <div class="post-actions">
      <% if current_user == @post.user %>
        <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-primary" %>
        <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
      <% end %>
      <%= link_to "Back to posts", posts_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
